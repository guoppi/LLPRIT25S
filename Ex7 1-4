using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Ex6
{
    class Program
    {
        static void Main(string[] args)
        {
            // Tehtävä 1

            Console.Write("Anna arvo luvulle n: ");
            int n = int.Parse(Console.ReadLine());

            for (int i = 1; i <= n; i++)
            {
                if (i < n)
                    Console.Write(i + ", ");
                else
                    Console.Write(i);
            }
            Console.WriteLine();

            // Tehtävä 2

            Console.Write("Anna arvo luvulle n: ");
            n = int.Parse(Console.ReadLine());

            for (int i = n; i >= 1; i--)
            {
                if (i > 1)
                    Console.Write(i + ", ");
                else
                    Console.Write(i);
            }
            Console.WriteLine();

            // Tehtävä 3

            Console.Write("Anna jokin pieni kirjain a-z: ");
            char kirjain = char.Parse(Console.ReadLine());

            for (char c = 'a'; c <= kirjain; c++)
            {
                if (c < kirjain)
                    Console.Write(c + ", ");
                else
                    Console.Write(c);
            }
            Console.WriteLine();

            // Tehtävä 4

            Console.Write("Anna ensimmäinen kirjain: ");
            kirjain = char.Parse(Console.ReadLine());

            Console.Write("Anna toinen kirjain: ");
            char toinenKirjain = char.Parse(Console.ReadLine());

            if (kirjain < toinenKirjain)
            {
                for (char c = kirjain; c <= toinenKirjain; c++)
                {
                    Console.Write(c);
                    if (c != toinenKirjain)
                    {
                        Console.Write(", ");
                    }
                }
            }
            else
            {
                for (char c = kirjain; c >= toinenKirjain; c--)
                {
                    Console.Write(c);
                    if (c != toinenKirjain)
                    {
                        Console.Write(", ");
                    }
                }
                Console.WriteLine();
            }
        }
    }
}
